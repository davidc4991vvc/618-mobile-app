<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jak_reed.www.a618_mobile_app.LoginView">

    <VideoView
        android:id="@+id/vapeVideoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="266dp"
        android:layout_height="246dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btn_fb_login"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="131dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/com_smart_login_code"
        android:drawableLeft="@drawable/facebook"
        android:text="Log In"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:textColor="#ffffff"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/google_login"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="131dp"
        android:layout_height="59dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@color/cardview_light_background"
        android:drawableLeft="@drawable/google"
        android:text="Log In"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />

    <View
        android:layout_width="261dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/vapeVideoView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/vapeVideoView"
        tools:layout_editor_absoluteY="480dp"
        tools:layout_editor_absoluteX="79dp" />

    <Button
        android:id="@+id/loginWitthEmail"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-1dp"
        android:text="log in with email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

</android.support.constraint.ConstraintLayout>
